<mapper namespace="productDescriptionMapper">
<!--    <resultMap id="ProductMap" type="Product">-->
<!--        <id column="product_id" property="userNo" jdbcType="INTEGER" javaType="int"/>-->
<!--        <result column="name" property="userName" jdbcType="VARCHAR" javaType="String"/>-->
<!--    </resultMap>-->

    <select id="findById" parameterType="String" resultType="com.fastcampus.toyproject2.productDescription.dto.ProductDescription">
        SELECT * FROM product_description WHERE product_description_id = #{productDescriptionId}
    </select>

    <select id="findByProductId" parameterType="String" resultType="com.fastcampus.toyproject2.productDescription.dto.ProductDescriptionDto">
        SELECT product_description_id, description
            FROM product_description pd
            WHERE product_description_id = (select product_description_id from product where product_id = #{productId})
    </select>


    <insert id="insert" parameterType="com.fastcampus.toyproject2.productDescription.dto.ProductDescription">
        INSERT INTO product_description (product_description_id,
                           description,
                           modify_datetime)
        VALUES (
                #{productDescriptionId}
                ,#{description}
                , NOW()
               )
    </insert>

    <delete id="delete" parameterType="String">
        DELETE FROM product_description WHERE product_description_id =#{productDescriptionId}
    </delete>

</mapper>